<% layout ('./layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <img src="https://res.cloudinary.com/ddkdhfgaq/image/upload/v1715608286/YelpCamp/lhu3nr5ut7uxll9ffd3u.png" alt="welcome" class="card-img-top" crossorigin="anonymous">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" class="validated-form" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="username" class="form-control" autofocus required>
                            <div class="valid-feedback">
                                Make sense!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" class="form-control"  required>
                            <div class="valid-feedback">
                                Nice one!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control"  required>
                            <div class="valid-feedback">
                                Nice one!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
